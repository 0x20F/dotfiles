[module/wifi]
type = internal/network
interface = wlp0s20f3
interval = 5.0

# Checkout https://github.com/polybar/polybar/wiki/Formatting#action-a
# for "Format tags" explanations as well as extra action buttons
format-connected = "%{A1:#{{ configs.menus }}/wifi-menu:}<ramp-signal>%{A}"
format-disconnected = "%{A1:#{{ configs.menus }}/wifi-menu:}<label-disconnected>%{A}"

label-disconnected = 󰤮
label-disconnected-foreground = #{{ hex #f4f4f4; alpha: 0.5 }}

ramp-signal-0 = 󰤫
ramp-signal-1 = 󰤟
ramp-signal-2 = 󰤢
ramp-signal-3 = 󰤢
ramp-signal-4 = 󰤨
ramp-signal-5 = 󰤨



[module/ethernet]
