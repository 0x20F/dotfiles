modules-left = power workspaces
modules-center = xwindow
modules-right = time microphone-status audio-status wifi battery

tray-position = right




[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50
label-empty = Desktop

format = <label>
format-prefix = "  "



[module/workspaces]
type = internal/bspwm

format = <label-state>
pin-workspaces = false
enable-scroll = true

label-focused = "  %name%  "
label-focused-foreground = #3185fc

label-empty = "  %name%  "
label-empty-foreground = #88ffffff

label-urgent = "  %name%  "

label-occupied = "  %name%  "



[module/time]
type = internal/date
interval = 1
time = %H:%M:%S
label = %time%



[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
