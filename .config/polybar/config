font-1 = "Material Design Icons:size=14;4"


[bar/left]
inherit = section/base
width = 16%
offset-x = 8
modules-center = power workspaces

[bar/center]
inherit = section/base
width = 25%
offset-x = 37.5%
modules-center = xwindow
background = #00181b21
foreground = #181b21

[bar/right]
inherit = section/base
width = 16%
offset-x = 83.75%
modules-left = time
modules-right = microphone-status audio-status wifi battery notifications
tray-position = right
separator = %{F#55373f51}|%{F-}

[bar/misc]
inherit = section/base
width = 15%
offset-x = 69%
background = #00181b21
foreground = #181b21
modules-right = ethernet bluetooth package-updates




[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50
label-empty = Desktop

format = <label>
format-prefix = "  "



[module/workspaces]
type = internal/bspwm

format = <label-state>
pin-workspaces = false
enable-scroll = true

label-focused = "  %name%  "
label-focused-foreground = #04ffff

label-empty = "  %name%  "
label-empty-foreground = #373f51

label-urgent = "  %name%  "

label-occupied = "  %name%  "
label-occupied-foreground = #99aab5 



[module/time]
type = internal/date
interval = 1
time = %H:%M:%S
label = %time%



[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5

label-charging = " %percentage%%"
label-discharging = " %percentage%%"
label-full = 󰁹

format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>

ramp-capacity-0 = 󰁺
ramp-capacity-1 = 󰁻
ramp-capacity-2 = 󰁾
ramp-capacity-3 = 󰂀
ramp-capacity-4 = 󰁹

animation-charging-0 = 󰂆
animation-charging-1 = 󰂇
animation-charging-2 = 󰂈
animation-charging-3 = 󰂉
animation-charging-4 = 󰂅

animation-charging-framerate = 1500



[module/power]
type = custom/script
exec = echo " 󰟪"
click-left = #{{ configs.menus }}/power-menu
