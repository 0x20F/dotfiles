#: ix-config
#: to: $HOME/.config/global

[
    {
        "name": "power menu",
        "command": "#{{ paths.menus }}/power"
    },
    
    {
        "name": "wifi settings",
        "command": "#{{ paths.menus }}/wifi"
    },

    {
        "name": "screenshot",
        "command": "#{{ paths.scripts }}/utils/screenshot 1"
    },

    {
        "name": "screenshot (5s timer)",
        "command": "#{{ paths.scripts }}/utils/screenshot 5"
    },
    
    {
        "name": "notifications",
        "command": "#{{ paths.menus }}/notifications"
    },

    {
        "name": "bluetooth settings",
        "command": "echo 'Not implemented yet lol'"
    },

    {
        "name": "toggle mic",
        "command": "#{{ paths.scripts }}/control/microphone toggle"
    },

    {
        "name": "toggle volume",
        "command": "#{{ paths.scripts }}/control/volume toggle"
    }
]
