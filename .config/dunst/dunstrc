#: ix-config
#: to: $HOME/.config/dunst


[colors]
    background = "#2e3440"
    frame = "#3b4252"

[global]
    ### Display ###

    follow = keyboard

    geometry = "300x4-8+40"    
    indicate_hidden = yes
    transparency = 0
    notification_height = 0
    separator_height = 1
    padding = 20
    horizontal_padding = 20
    frame_width = 1
    corner_radius = 6

    separator_color = auto
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = FiraCode Nerd Font, Font Awesome 5 Free Solid 9
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%a</b>\n%s\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = true
    ellipsize = middle
    ignore_newline = false
    stack_duplicates = true
    show_indicators = true

    ### Icons ###
    icon_position = left
    max_icon_size = 128
    icon_path = /usr/share/icons/Nord-Icon/48x48/status/:/usr/share/icons/Nord-Icon/48x48/devices/:/usr/share/icons/Nord-Icon/48x48/apps

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/urxvt -e fzf:
    browser = /usr/bin/linkhandler
    always_run_script = false
    title = Dunst
    class = Dunst
    startup_notification = true
    force_xinerama = false

[log]
    script = ~/dots/.scripts/dunst/log # Replace with 'ix' constant later

[urgency_low]
    background = colors.background
    foreground = "#81a1c1"
    frame_color = "#3b4252"
    timeout = 5

[urgency_normal]
    background = colors.background
    foreground = "#e5e9f0"
    frame_color = "#3b4252"
    timeout = 5

[urgency_critical]
    background = colors.background
    foreground = "#bf616a"
    frame_color = "#3b4252"
    timeout = 0

